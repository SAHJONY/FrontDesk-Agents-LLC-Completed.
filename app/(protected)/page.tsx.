'use client';

import React, { useEffect, useState } from 'react';
import { createClient } from '@/utils/supabase/client';
import { 
  PhoneIcon,
  ShieldCheckIcon,
  ArrowPathIcon,
  PlayIcon,
  ArrowUpTrayIcon,
  RocketLaunchIcon
} from '@heroicons/react/24/outline';

export default function DashboardPage() {
  const supabase = createClient();
  const [loadingLeadId, setLoadingLeadId] = useState<string | null>(null);
  const [selectedLead, setSelectedLead] = useState<any>(null);
  const [leads, setLeads] = useState<any[]>([]);
  const [isBulkLoading, setIsBulkLoading] = useState(false);
  const [metrics, setMetrics] = useState({
    callsProcessed: 0,
    minutesUsed: 0,
    totalMinutes: 1000,
  });

  const userId = '42c9eda0-81fd-4d7a-b9f7-49bba359d6ce';

  useEffect(() => {
    fetchDashboardData();
    const channel = supabase
      .channel('realtime-dashboard')
      .on('postgres_changes', { event: '*', schema: 'public', table: 'call_results' }, () => fetchDashboardData())
      .subscribe();
    return () => { supabase.removeChannel(channel); };
  }, []);

  async function fetchDashboardData() {
    const { data: leadsData } = await supabase.from('leads').select('*, call_results(*)').order('created_at', { ascending: false });
    const { data: logs } = await supabase.from('consumption_log').select('minutes_used');
    if (leadsData) setLeads(leadsData);
    if (logs) {
      const total = logs.reduce((acc, l) => acc + (l.minutes_used || 0), 0);
      setMetrics(prev => ({ ...prev, minutesUsed: Math.round(total), callsProcessed: leadsData?.length || 0 }));
    }
  }

  // --- BULK UPLOAD LOGIC (Category 9.1) ---
  const handleCSVUpload = async (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (!file) return;

    setIsBulkLoading(true);
    const reader = new FileReader();
    reader.onload = async (e) => {
      const text = e.target?.result as string;
      const rows = text.split('\n').slice(1); // Skip header

      const leadsToInsert = rows.map(row => {
        const [full_name, phone_number] = row.split(',');
        return { full_name: full_name?.trim(), phone_number: phone_number?.trim(), user_id: userId };
      }).filter(l => l.full_name && l.phone_number);

      const { error } = await supabase.from('leads').insert(leadsToInsert);
      if (error) alert("Error: " + error.message);
      else fetchDashboardData();
      setIsBulkLoading(false);
    };
    reader.readAsText(file);
  };

  const callLead = async (lead: any) => {
    setLoadingLeadId(lead.id);
    try {
      await fetch('https://awzczbaarskqjgdatefv.supabase.co/functions/v1/bland-call', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY}` },
        body: JSON.stringify({ record: lead, metadata: { user_id: userId, lead_id: lead.id, full_name: lead.full_name, phone_number: lead.phone_number } }),
      });
    } catch (error) { console.error(error); } 
    finally { setLoadingLeadId(null); }
  };

  const triggerBulkCalls = async () => {
    const targets = leads.filter(l => !l.call_results?.length);
    if (!confirm(`¬øIniciar ${targets.length} llamadas autom√°ticas?`)) return;
    for (const lead of targets) {
      await callLead(lead);
      await new Promise(r => setTimeout(r, 1500)); // Rate limiting
    }
  };

  const usagePercentage = (metrics.minutesUsed / metrics.totalMinutes) * 100;

  return (
    <div className="min-h-screen bg-[#000814] text-white p-4 lg:p-8 space-y-8 animate-in fade-in duration-700">
      
      {/* HEADER SECTION */}
      <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div className="lg:col-span-2 bg-slate-900 border border-white/5 rounded-[32px] p-8 flex flex-col justify-center relative overflow-hidden shadow-2xl">
          <div className="relative z-10">
            <div className="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyan-500/10 border border-cyan-500/20 text-cyan-400 text-[10px] font-black mb-4 uppercase tracking-[0.2em]">
              <ShieldCheckIcon className="w-4 h-4" /> Acceso VIP Verificado
            </div>
            <h1 className="text-4xl font-black italic uppercase tracking-tighter">Command Center</h1>
            <p className="text-gray-400 italic mt-2">Bienvenido, J. Gonzalez. Escala tus ventas con IA.</p>
          </div>
        </div>

        <div className="bg-gradient-to-br from-slate-900 to-black border-2 border-cyan-500/30 rounded-[32px] p-8">
          <p className="text-gray-400 text-[10px] font-black uppercase tracking-widest mb-2">Plan Fundador</p>
          <p className="text-3xl font-black italic">{metrics.totalMinutes - metrics.minutesUsed} <span className="text-sm font-medium text-gray-500 uppercase">Min Libres</span></p>
          <div className="mt-6 w-full bg-white/5 h-2 rounded-full border border-white/5 overflow-hidden">
            <div className="bg-cyan-500 h-full transition-all duration-1000 shadow-[0_0_10px_rgba(6,182,212,0.5)]" style={{ width: `${usagePercentage}%` }} />
          </div>
        </div>
      </div>

      {/* BULK ACTIONS BAR */}
      <div className="flex flex-wrap gap-4">
        <label className="flex items-center gap-3 bg-white/5 border border-white/10 hover:border-cyan-500 px-8 py-4 rounded-[24px] cursor-pointer transition-all group">
          <ArrowUpTrayIcon className="w-5 h-5 text-cyan-400 group-hover:scale-110 transition-transform" />
          <span className="text-[10px] font-black uppercase tracking-[0.2em]">Subir CSV</span>
          <input type="file" accept=".csv" onChange={handleCSVUpload} className="hidden" />
        </label>
        
        <button 
          onClick={triggerBulkCalls}
          className="flex items-center gap-3 bg-cyan-500 text-black px-8 py-4 rounded-[24px] hover:bg-cyan-400 transition-all shadow-[0_0_20px_rgba(6,182,212,0.3)]"
        >
          <RocketLaunchIcon className="w-5 h-5" />
          <span className="text-[10px] font-black uppercase tracking-[0.2em]">Lanzar Campa√±a</span>
        </button>
      </div>

      {/* LEADS TABLE */}
      <div className="bg-slate-900/50 border border-white/5 rounded-[32px] overflow-hidden backdrop-blur-md">
        <table className="w-full text-left border-collapse">
          <thead>
            <tr className="border-b border-white/5 bg-white/5">
              <th className="px-8 py-5 text-[10px] font-black uppercase text-gray-500 tracking-widest">Lead</th>
              <th className="px-8 py-5 text-[10px] font-black uppercase text-gray-500 tracking-widest">Status</th>
              <th className="px-8 py-5 text-[10px] font-black uppercase text-gray-500 tracking-widest text-right">Acci√≥n</th>
            </tr>
          </thead>
          <tbody>
            {leads.map((lead) => {
              const call = lead.call_results?.[0];
              return (
                <tr key={lead.id} className="border-b border-white/5 hover:bg-white/5 transition-colors cursor-pointer group">
                  <td className="px-8 py-6" onClick={() => setSelectedLead(lead)}>
                    <p className="font-bold text-white group-hover:text-cyan-400 transition-colors uppercase italic">{lead.full_name}</p>
                    <p className="text-[10px] text-gray-500 font-mono tracking-tighter">{lead.phone_number}</p>
                  </td>
                  <td className="px-8 py-6">
                    <div className="flex items-center gap-2">
                      <span className={`px-3 py-1 rounded-full border text-[10px] font-black uppercase italic ${
                        call?.status === 'In Call üìû' ? 'bg-amber-500/10 text-amber-400 border-amber-500/20 animate-pulse' : 'bg-white/5 text-gray-400 border-white/10'
                      }`}>
                        {call?.status || 'Ready'}
                      </span>
                      {call?.sentiment_score && (
                        <span className="px-3 py-1 rounded-full bg-cyan-500/10 border border-cyan-500/20 text-[10px] font-black uppercase text-cyan-400 italic">
                          {call.sentiment_score}
                        </span>
                      )}
                    </div>
                  </td>
                  <td className="px-8 py-6 text-right flex items-center justify-end gap-3">
                    {call?.recording_url && (
                      <a href={call.recording_url} target="_blank" className="p-2 rounded-lg bg-white/5 border border-white/10 hover:border-cyan-500 transition-all text-cyan-400">
                        <PlayIcon className="w-5 h-5" />
                      </a>
                    )}
                    <button 
                      disabled={loadingLeadId === lead.id || call?.status === 'In Call üìû'}
                      onClick={(e) => { e.stopPropagation(); callLead(lead); }}
                      className="bg-white/5 border border-white/10 text-white hover:bg-cyan-500 hover:text-black p-3 rounded-xl transition-all disabled:opacity-30"
                    >
                      {loadingLeadId === lead.id ? <ArrowPathIcon className="w-4 h-4 animate-spin" /> : <PhoneIcon className="w-4 h-4" />}
                    </button>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>

      {/* CALL SUMMARY MODAL */}
      {selectedLead && (
        <div className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80 backdrop-blur-xl">
          <div className="bg-slate-900 border border-white/10 w-full max-w-2xl rounded-[40px] shadow-2xl overflow-hidden animate-in zoom-in duration-200">
            <div className="p-8 border-b border-white/5 flex justify-between items-center bg-white/5">
              <h3 className="text-2xl font-black italic uppercase tracking-tighter">An√°lisis de Llamada</h3>
              <button onClick={() => setSelectedLead(null)} className="text-gray-500 hover:text-white transition-colors text-xs font-black uppercase">‚úï</button>
            </div>
            <div className="p-8 space-y-6">
              <div className="p-6 bg-black/20 rounded-3xl border border-white/5">
                <p className="text-[10px] font-black text-gray-500 uppercase tracking-[0.2em] mb-3">AI Summary</p>
                <p className="text-sm italic text-gray-300 leading-relaxed">{selectedLead.call_results?.[0]?.summary || "Generando resumen..."}</p>
              </div>
              <div className="p-6 bg-black/40 rounded-3xl border border-white/5">
                <p className="text-[10px] font-black text-gray-500 uppercase tracking-[0.2em] mb-3">Transcripci√≥n</p>
                <div className="text-[11px] font-mono text-gray-500 h-32 overflow-y-auto custom-scrollbar">{selectedLead.call_results?.[0]?.transcript || "Audio no procesado."}</div>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  );
}
