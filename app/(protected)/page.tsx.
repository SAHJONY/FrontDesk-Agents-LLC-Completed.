'use client';

import React, { useEffect, useState } from 'react';
import { createClient } from '@/utils/supabase/client';
import { 
  ClockIcon, 
  CalendarDaysIcon, 
  ChartBarIcon, 
  PhoneIcon,
  SparklesIcon,
  ShieldCheckIcon,
  ArrowPathIcon,
  ChatBubbleBottomCenterTextIcon
} from '@heroicons/react/24/outline';

// --- MAIN DASHBOARD COMPONENT ---
export default function DashboardPage() {
  const supabase = createClient();
  const [loadingLeadId, setLoadingLeadId] = useState<string | null>(null);
  const [selectedLead, setSelectedLead] = useState<any>(null);
  const [leads, setLeads] = useState<any[]>([]);
  const [metrics, setMetrics] = useState({
    callsProcessed: 0,
    minutesUsed: 0,
    totalMinutes: 1000,
    conversionRate: 0
  });

  // Your verified UID for J. Gonzalez
  const userId = '42c9eda0-81fd-4d7a-b9f7-49bba359d6ce';

  useEffect(() => {
    fetchDashboardData();
  }, []);

  async function fetchDashboardData() {
    // 1. Fetch Leads with related Call Results
    const { data: leadsData } = await supabase
      .from('leads')
      .select('*, call_results(*)')
      .order('created_at', { ascending: false });

    // 2. Fetch Consumption for Founder Plan
    const { data: logs } = await supabase
      .from('consumption_log')
      .select('minutes_used');

    if (leadsData) setLeads(leadsData);
    if (logs) {
      const total = logs.reduce((acc, l) => acc + (l.minutes_used || 0), 0);
      setMetrics(prev => ({ 
        ...prev, 
        minutesUsed: Math.round(total),
        callsProcessed: leadsData?.length || 0 
      }));
    }
  }

  const callLead = async (lead: any) => {
    setLoadingLeadId(lead.id);
    try {
      const response = await fetch('https://awzczbaarskqjgdatefv.supabase.co/functions/v1/bland-call', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY}`
        },
        body: JSON.stringify({
          record: lead,
          metadata: { user_id: userId, lead_id: lead.id }
        }),
      });
      if (response.ok) alert(`ðŸš€ Llamada iniciada para ${lead.full_name}`);
    } catch (error) {
      console.error(error);
    } finally {
      setLoadingLeadId(null);
    }
  };

  const usagePercentage = (metrics.minutesUsed / metrics.totalMinutes) * 100;

  return (
    <div className="min-h-screen bg-[#000814] text-white p-4 lg:p-8 space-y-8 animate-in fade-in duration-700">
      
      {/* --- HEADER & FOUNDER PLAN --- */}
      <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div className="lg:col-span-2 bg-slate-900 border border-white/5 rounded-[32px] p-8 flex flex-col justify-center relative overflow-hidden">
          <div className="relative z-10">
            <div className="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyan-500/10 border border-cyan-500/20 text-cyan-400 text-[10px] font-black mb-4 uppercase tracking-[0.2em]">
              <ShieldCheckIcon className="w-4 h-4" /> Acceso VIP Verificado
            </div>
            <h1 className="text-4xl font-black italic uppercase tracking-tighter">Command Center</h1>
            <p className="text-gray-400 italic mt-2">Bienvenido, J. Gonzalez. Tus agentes operando al 100%.</p>
          </div>
        </div>

        <div className="bg-gradient-to-br from-slate-900 to-black border-2 border-cyan-500/30 rounded-[32px] p-8">
          <p className="text-gray-400 text-[10px] font-black uppercase tracking-widest mb-2">Plan Fundador</p>
          <p className="text-3xl font-black italic">{metrics.totalMinutes - metrics.minutesUsed} <span className="text-sm font-medium text-gray-500 uppercase">Min Libres</span></p>
          <div className="mt-6 w-full bg-white/5 h-2 rounded-full border border-white/5 overflow-hidden">
            <div className="bg-cyan-500 h-full transition-all duration-1000" style={{ width: `${usagePercentage}%` }} />
          </div>
        </div>
      </div>

      {/* --- LEADS TABLE --- */}
      <div className="bg-slate-900/50 border border-white/5 rounded-[32px] overflow-hidden backdrop-blur-md">
        <div className="p-8 border-b border-white/5 flex justify-between items-center">
          <h2 className="text-xl font-black italic uppercase tracking-tight">Lead Management</h2>
        </div>
        <div className="overflow-x-auto">
          <table className="w-full text-left border-collapse">
            <thead>
              <tr className="border-b border-white/5 bg-white/5">
                <th className="px-8 py-4 text-[10px] font-black uppercase text-gray-500">Lead</th>
                <th className="px-8 py-4 text-[10px] font-black uppercase text-gray-500">Status</th>
                <th className="px-8 py-4 text-[10px] font-black uppercase text-gray-500 text-right">AcciÃ³n</th>
              </tr>
            </thead>
            <tbody>
              {leads.map((lead) => (
                <tr key={lead.id} className="border-b border-white/5 hover:bg-white/5 transition-colors cursor-pointer group">
                  <td className="px-8 py-6" onClick={() => setSelectedLead(lead)}>
                    <p className="font-bold text-white group-hover:text-cyan-400 transition-colors">{lead.full_name}</p>
                    <p className="text-[10px] text-gray-500 font-mono">{lead.phone_number}</p>
                  </td>
                  <td className="px-8 py-6">
                    <span className="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-[10px] font-black uppercase tracking-widest text-cyan-400 italic">
                      {lead.call_results?.[0]?.sentiment_score || 'Pendiente'}
                    </span>
                  </td>
                  <td className="px-8 py-6 text-right">
                    <button 
                      disabled={loadingLeadId === lead.id}
                      onClick={(e) => { e.stopPropagation(); callLead(lead); }}
                      className="inline-flex items-center gap-2 bg-cyan-500 text-black px-4 py-2 rounded-xl font-black text-[10px] uppercase hover:bg-cyan-400 transition-all disabled:opacity-50"
                    >
                      {loadingLeadId === lead.id ? <ArrowPathIcon className="w-3 h-3 animate-spin" /> : <PhoneIcon className="w-3 h-3" />}
                      {loadingLeadId === lead.id ? 'Llamando' : 'Llamar'}
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      {/* --- CALL SUMMARY MODAL --- */}
      {selectedLead && (
        <div className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80 backdrop-blur-xl animate-in fade-in duration-300">
          <div className="bg-slate-900 border border-white/10 w-full max-w-2xl rounded-[40px] shadow-2xl overflow-hidden">
            <div className="p-8 border-b border-white/5 flex justify-between items-center">
              <h3 className="text-2xl font-black italic uppercase tracking-tighter">AnÃ¡lisis de IA</h3>
              <button onClick={() => setSelectedLead(null)} className="text-gray-500 hover:text-white transition-colors uppercase font-black text-xs">âœ• Cerrar</button>
            </div>
            <div className="p-8 space-y-6">
              <div className="space-y-2">
                <p className="text-[10px] font-black text-gray-500 uppercase tracking-widest">Resumen Ejecutivo</p>
                <div className="p-4 bg-black/20 rounded-2xl border border-white/5 text-sm italic text-gray-300 leading-relaxed">
                  {selectedLead.call_results?.[0]?.summary || "El resumen estarÃ¡ disponible al finalizar la llamada."}
                </div>
              </div>
              <div className="space-y-2">
                <p className="text-[10px] font-black text-gray-500 uppercase tracking-widest">TranscripciÃ³n</p>
                <div className="p-4 bg-black/40 rounded-2xl border border-white/5 text-[10px] font-mono text-gray-500 h-40 overflow-y-auto">
                  {selectedLead.call_results?.[0]?.transcript || "Procesando audio..."}
                </div>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  );
}
