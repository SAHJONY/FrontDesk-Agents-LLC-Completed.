const ANNUAL_DISCOUNT = 0.2;

type BillingCycle = 'monthly' | 'annual';

function formatMoney(n: number) {
  return n.toLocaleString('en-US');
}

function computePricing(priceMonthly: number, billingCycle: BillingCycle) {
  if (billingCycle === 'monthly') {
    return {
      displayMonthly: priceMonthly,
      billedText: null as string | null,
    };
  }

  const discountedMonthly = Math.round(priceMonthly * (1 - ANNUAL_DISCOUNT));
  const annualTotal = Math.round(priceMonthly * 12 * (1 - ANNUAL_DISCOUNT));

  return {
    displayMonthly: discountedMonthly,
    billedText: `Billed $${formatMoney(annualTotal)}/yr (save 20%)`,
  };
}

