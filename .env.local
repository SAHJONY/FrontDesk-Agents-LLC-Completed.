# =============================================================================
# DATABASE (Direct Postgres Access)
# =============================================================================
# Replace [password] and [project-id] with your actual Supabase details
DATABASE_URL="postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres?schema=public"
DIRECT_URL="postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres?schema=public"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Use a long random string. Must match what is used in your JWT verification code.
JWT_SECRET="front-desk-supreme-commander-secret-2026-key"
JWT_EXPIRES_IN="7d"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-any-random-string"

# Canonical app URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# SUPABASE (Primary Backend)
# =============================================================================
# Find these in Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL="https://[your-id].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[your-anon-key]"
SUPABASE_SERVICE_ROLE_KEY="[your-service-role-key]"

# =============================================================================
# BLAND AI (Voice AI Agent Infrastructure)
