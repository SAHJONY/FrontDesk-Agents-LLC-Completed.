{
  "compilerOptions": {
    /* =========================
       TARGET & RUNTIME
    ========================= */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* =========================
       JAVASCRIPT / TYPESCRIPT
    ========================= */
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* =========================
       MODULE SYSTEM
    ========================= */
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "preserve",

    /* =========================
       NEXT.JS / BUILD
    ========================= */
    "incremental": true,

    /* =========================
       PATH ALIASES
    ========================= */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  /* =========================
     FILE INCLUSION
  ========================= */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* =========================
     FILE EXCLUSION
  ========================= */
  "exclude": [
    "node_modules",
    "scripts"
  ]
}
