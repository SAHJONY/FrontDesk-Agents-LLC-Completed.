{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/cron/onboarding-sync",
      "destination": "/pages/api/cron/onboarding-sync.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/onboarding-sync",
      "schedule": "0 13 * * *"
    }
  ]
}
