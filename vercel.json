{
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "regions": ["iad1"],
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "frontdeskagents.com"
        }
      ],
      "destination": "https://www.frontdeskagents.com/$1",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-digest",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/bill-overage",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/reset-usage",
      "schedule": "0 0 1 * *"
    }
  ],
  "functions": {
    "app/api/cron/daily-digest/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/bill-overage/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/reset-usage/route.ts": {
      "maxDuration": 60
    },
    "app/api/wholesale/sync-bulk-secrets/route.ts": {
      "maxDuration": 30
    },
    "app/api/**/route.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },

        {
          "key": "Permissions-Policy",
          "value": "camera=(self), microphone=(self), geolocation=()"
        },

        { "key": "X-Platform-Engine", "value": "Internal-Workforce-Engine" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
