{
  "version": 2,
  "crons": [
    {
      "path": "/api/cron/daily-digest",
      "schedule": "0 8 * * *"
    }
  ],
  "functions": {
    "app/api/cron/daily-digest/route.ts": { 
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/wholesale/sync-bulk-secrets/route.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Platform-Engine",
          "value": "Sovereign-Internal"
        }
      ]
    }
  ]
}
