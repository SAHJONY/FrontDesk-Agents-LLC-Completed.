# FrontDesk Agents Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file containing real credentials

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-strong-random-secret-min-32-characters"
JWT_EXPIRATION="24h"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# =============================================================================
# SUPABASE
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =============================================================================
# BLAND AI (Voice AI)
# =============================================================================
BLAND_API_KEY="your-bland-api-key"
BLAND_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# OPENAI (Optional - for AI features)
# =============================================================================
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# EMAIL (Optional - if using custom SMTP)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourcompany.com"

# =============================================================================
# STRIPE (Payment Processing)
# =============================================================================
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
SENTRY_DSN="https://...@sentry.io/..."
LOGTAIL_SOURCE_TOKEN="your-logtail-token"

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
ENABLE_AI_WORKFORCE="true"
ENABLE_SELF_HEALING="true"
ENABLE_ANALYTICS="true"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
NODE_ENV="development"
DEBUG="false"
