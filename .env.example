# FrontDesk Agents Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file containing real credentials

# =============================================================================
# DATABASE (Prisma / Direct Postgres Access)
# =============================================================================
DATABASE_URL="postgresql://postgres:[password]@db.[id].supabase.co:5432/postgres?schema=public"
DIRECT_URL="postgresql://postgres:[password]@db.[id].supabase.co:5432/postgres?schema=public"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-strong-random-secret-min-32-characters"
JWT_EXPIRATION="24h"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Canonical app URL
NEXT_PUBLIC_APP_URL="https://www.frontdeskagents.com"

# =============================================================================
# SUPABASE (Primary Backend & Rate Limiting)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Required for Cron Jobs and Admin-level API routes
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =============================================================================
# BLAND AI (Voice AI)
# =============================================================================
BLAND_API_KEY="your-bland-api-key"
BLAND_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# OPENAI
# =============================================================================
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# STRIPE (Payment Processing)
# =============================================================================
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (MONTHLY)
STRIPE_PRICE_STARTER="price_..."
STRIPE_PRICE_PROFESSIONAL="price_..."
STRIPE_PRICE_GROWTH="price_..."
STRIPE_PRICE_ENTERPRISE="price_..."

# Stripe Price IDs (ANNUAL)
STRIPE_PRICE_STARTER_ANNUAL="price_..."
STRIPE_PRICE_PROFESSIONAL_ANNUAL="price_..."
STRIPE_PRICE_GROWTH_ANNUAL="price_..."
STRIPE_PRICE_ENTERPRISE_ANNUAL="price_..."

# =============================================================================
# CRON & WEBHOOK SECURITY
# =============================================================================
# Used to verify that requests to /api/cron/daily-digest are legitimate
CRON_SECRET="your-strong-cron-secret"
WEBHOOK_SECRET="your-strong-webhook-secret"

# =============================================================================
# DEVELOPMENT & FLAGS
# =============================================================================
NODE_ENV="development"
ENABLE_AI_WORKFORCE="true"
ENABLE_ANALYTICS="true"
DEBUG="false"
