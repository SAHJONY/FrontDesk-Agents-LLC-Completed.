-- docs/tenants_schema.sql
-- Basic tenants table to track each paying client for FrontDesk Command Center

create table if not exists public.tenants (
  id uuid primary key default gen_random_uuid(),
  name text not null,
  contact_name text,
  contact_email text,
  contact_phone text,

  plan text not null default 'command_center', -- 'starter' | 'command_center' | 'enterprise'
  status text not null default 'lead',        -- 'lead' | 'invoice_sent' | 'paid_onboarding' | 'active' | 'paused' | 'canceled'

  billing_notes text,
  created_at timestamptz not null default now(),
  updated_at timestamptz not null default now()
);

-- Optional: RLS policies (adapt to your auth model)
alter table public.tenants enable row level security;

-- Simple helper trigger to keep updated_at fresh.
create or replace function public.set_updated_at()
returns trigger as $$
begin
  new.updated_at = now();
  return new;
end;
$$ language plpgsql;

drop trigger if exists tenants_set_updated_at on public.tenants;

create trigger tenants_set_updated_at
before update on public.tenants
for each row
execute procedure public.set_updated_at();
