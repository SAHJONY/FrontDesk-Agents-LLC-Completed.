// prisma/schema.prisma

model BusinessConfig {
  id                String   @id @default(cuid())
  userId            String   @unique
  businessName      String
  industry          String?
  websiteUrl        String?
  
  // Informaci√≥n sintetizada por la IA
  services          String[] // Lista de servicios
  businessHours     Json?    // {weekdays: "9-5", weekends: "10-2"}
  toneOfVoice       String?  // Formal, Amigable, etc.
  cancellationPolicy String?
  faq               Json?    // Array de objetos {q: string, a: string}
  
  // El prompt final generado para el agente de voz/texto
  systemPrompt      String?  @db.Text 
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
